// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DATABASE_URL") // Add this line for Vercel
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   // "teacher" or "assistant"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Batch {
  id        String    @id @default(cuid())
  name      String
  days      String    // "sat-mon-wed" or "sun-tues-thurs"
  time      String    // "9:00-10:00" or "9:00-10:30"
  batchCode String    // "SSC-24", "SSC-22", etc.
  fullName  String    @unique // "name-sat-9-24"
  students  Student[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Student {
  id              String    @id @default(cuid())
  studentId       String    @unique // Meaningful ID like "STU2024001"
  name            String
  personalNumber  String
  guardianNumber  String
  college         String?
  address         String?
  batchId         String
  batch           Batch     @relation(fields: [batchId], references: [id], onDelete: Cascade)
  payments        Payment[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([studentId])
  @@index([batchId])
}

model Payment {
  id        String   @id @default(cuid())
  studentId String
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  month     String   // Format: "2024-01"
  amount    Float
  isPaid    Boolean  @default(true)
  paidAt    DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([studentId, month])
  @@index([studentId])
  @@index([month])
}